<%- include('header'); -%>

<div class="blogs content">
    <h2>user</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/userdetails/<%= blog._id %>">
          <h3 class="title"><%= blog.email %></h3>
          <p class="snippet"><%= blog.username %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no user to display...</p>
    <% } %>
  </div>
  <a href="/createuser" class=" btn btn-info"><img src="/book-medical-solid.svg" width="30px" height="30px">createuser</a>

  <%- include('footer'); -%>