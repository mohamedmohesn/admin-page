<%- include('header'); -%>

<div class="details content">
    <h2>email: <%= blog.email %></h2>
    <div class="content">
      <img src="/uploads/<%= blog.imagedoctor %>" alt="<%= blog.username %> " style="display:inline; max-width: 500px; max-height: 500px;">
      <img src="/uploads/<%= blog.imageSSN %>" alt="<%= blog.username %>"style="display:inline; max-width: 500px; max-height: 500px; margin: 5px;"><br>
        <h3>username: <%= blog.username %></h3>
      <h3>phone: <%= blog.phone %></h3>
      <h3>specialty: <%= blog.specialty.name %></h3>
      <h3>fee: <%= blog.fee %></h3>
      <h3>describtion: <%= blog.describtion %></h3>
      <h3>accept: <%= blog.accept %></h3>
      
    </div>
    <a class="delete" data-doc="<%= blog._id %>">
      <img src="/trashcan.svg" alt="delete icon">
    </a>
    <a class="create" data-doc="<%= blog._id %>">
      <img src="/book-medical-solid.svg" width="30px" height="30px" alt="create_doctor_icon">
    </a>
  </div>
  <script>
    const trashcan = document.querySelector('a.delete');
    
    trashcan.addEventListener('click', (e) => {
      const endpoint = `/deletedoctor/${trashcan.dataset.doc}`;
      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });

    const create = document.querySelector('a.create');
    
    create.addEventListener('click', (e) => {
      const endpoint = `/mainCreate/${create.dataset.doc}`;
      fetch(endpoint, {
        method:'POST',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });
    
  </script>
<%- include('footer'); -%>